#!/usr/bin/env bash

set -e

if [ "$debug" = 'true' ];then set -x; fi

print_help_info(){
  exec echo "
Usage:

lnmp-mnamp {start | restart | stop} {SOFT_NAME | common}

lnmp-mnamp status

Example:

lnmp-mnamp start php nginx mysql redis

lnmp-mnamp stop common
"
}

################################################################################

LNMP_MACOS_COMMON_SOFT="nginx php mysql redis"

################################################################################

function _start(){
    for soft in "$@"
    do
    echo -e "\nStart $soft ...\n"
    case "$soft" in
      redis )
          if ! [ -f /usr/local/var/run/redis.log ];then sudo touch /usr/local/var/run/redis.log; fi
          sudo redis-server \
              --logfile /usr/local/var/run/redis.log \
              --save 900 1 \
              --save 300 10 \
              --save 60 10000 \
              --dir /tmp \
              --bind 127.0.0.1 \
              --appendonly yes \
              --pidfile /usr/local/var/run/redis.pid \
              --daemonize yes \
              --aof-use-rdb-preamble yes
      ;;

      mongodb )
          sudo mongod \
              --config /usr/local/etc/mongod.conf \
              --pidfilepath /usr/local/var/run/mongodb.pid
      ;;

      memcached )
          sudo memcached \
              -uroot \
              -d \
              -P /usr/local/var/run/memcached.pid
      ;;

      php )
          php-fpm \
              -D \
              -R \
              -g /usr/local/var/run/php-fpm.pid
      ;;

      nginx )
          sudo nginx -t
          # sudo nginx -g "pid /run/nginx.pid;"
          sudo nginx
      ;;

      mysql )
          mysql.server start
      ;;

      postgresql )
          pg_ctl -D /usr/local/var/postgres start
      ;;
esac
done
}

function _stop(){
  for soft in "$@"
  do
    echo -e "\nStop $soft ... \n"
  case "$soft" in
    php )
        sudo kill $(cat /usr/local/var/run/php-fpm.pid)
    ;;

    nginx )
        # sudo nginx -s stop -g "pid /run/nginx.pid;"

        sudo nginx -s stop
    ;;

    redis )
        redis-cli shutdown
    ;;

    memcached )
        sudo kill $(cat /usr/local/var/run/memcached.pid)
    ;;

    mongodb )
        sudo kill $(cat /usr/local/var/run/mongodb.pid)
    ;;

    mysql )
        mysql.server stop
    ;;

    postgresql )
        pg_ctl -D /usr/local/var/postgres stop
    ;;
  esac
done
}

_restart(){
  for soft in "$@"
  do
  _stop $soft
  _start $soft
done
}

if [ -z "$1" ];then
    print_help_info
fi

if [ "$1" = stop ];then
  shift
  if [ "$1" = 'common' ];then
    set +e
    clear
    for soft in $LNMP_MACOS_COMMON_SOFT
      do
      _stop $soft
      done
    exit 0
  fi
  _stop "$@"
  exit 0
fi

if [ "$1" = start ];then
  shift
  if [ "$1" = 'common' ];then
    set +e
    clear
    for soft in $LNMP_MACOS_COMMON_SOFT
      do
      _start $soft
      done
    exit 0
  fi

  _start "$@"
  exit 0
fi

if [ "$1" = restart ];then
  shift
  if [ "$1" = 'common' ];then
    set +e
    clear
    for soft in $LNMP_MACOS_COMMON_SOFT
      do
      _restart $soft
      done
    exit 0
  fi
  _restart "$@"
  exit 0
fi

if [ "$1" = 'status' ];then
    items="nginx php-fpm mysql redis-server memcached mongod postgres"
    for item in $items
    do
      echo "==> $item status: "
      ps aux | grep "$item" --color=auto | grep -v grep || true
      echo ""
      echo ""
    done
fi
